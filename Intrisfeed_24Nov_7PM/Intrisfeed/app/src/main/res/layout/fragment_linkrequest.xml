<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUserRequestList"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@color/colorAccent"
                android:text="RequestList"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvContactList"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="ContactList"
                android:background="@color/colorAccent"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/llRequestList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_2sdp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lvRequestList_LinkrequestFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:scrollbars="none" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCotactList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_2sdp"
        android:visibility="gone"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lvInviteMessage_LinkrequestFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>